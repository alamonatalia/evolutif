---
import type { FaviconProps } from "../../types/head/FaviconProps";

const {
    favicon,
    includeManifest,
    themeColor,
} = Astro.props as FaviconProps;
---

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href={favicon} />

<!-- Manifest opcional -->
{includeManifest && <link rel="manifest" href="/site.webmanifest" />}

<!-- Theme color -->
<meta name="theme-color" content={themeColor} />