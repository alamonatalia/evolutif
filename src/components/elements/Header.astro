---
import Container from "./Container.astro";
import Nav from "./Nav.astro";

const img = {
  logo: `${Astro.site}/images/evolutif.svg`,
};

---

<header class="absolute top-0 left-0 w-full py-6 z-10">

    <Container>
        <div class="flex items-center justify-center md:justify-between py-4">
            <a href="#home-link">
                <img 
                    src={img.logo}    
                    alt="Evolutif Logo" 
                    class="w-full h-auto max-w-52 pt-10 lg:pt-0 transition-all md:max-w-2xs"
                />
            </a>
            <Nav/>
        </div>
    </Container>

</header>