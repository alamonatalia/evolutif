<nav class="font-display font-semibold z-10">
    
    <button 
        id="menu-btn" 
        class="md:hidden text-3xl fixed top-6 right-6 cursor-pointer">
        &#9776;
    </button>

    <ul
        class="hidden md:flex gap-6">
        <li>
            <a 
                href="#home"
                class="text-white text-xl border-transparent border-b-2 hover:border-white transition-all"
                id="home-link">
                Home
            </a>
        </li>
        <li>
            <a 
                href="#services"
                class="text-white text-xl border-transparent border-b-2 hover:border-white transition-all"
                id="services-link">
                Services
            </a>
        </li>
        <li>
            <a 
                href="#evolutif"
                class="text-white text-xl border-transparent border-b-2 hover:border-white transition-all"
                id="evolutif-link">
                The Evolutif way
            </a>
        </li>
        <li>
            <a 
                href="#contact"
                class="text-white text-xl border-transparent border-b-2 hover:border-white transition-all"
                id="contact-link">
                Contact
            </a>
        </li>
    </ul>
</nav>

<div
      id="mobile-menu"
      class="fixed top-0 right-0 h-full w-64 bg-brand-secondary transform translate-x-full transition-transform duration-300 z-50"
    >
    <button 
        id="close-btn" 
        class="text-white text-3xl absolute top-4 right-4 cursor-pointer">
        &times;
    </button>
    <ul class="flex flex-col items-start gap-6 mt-20 px-6">
        <li><a href="#home" class="hover:text-brand-primary font-display block">Home</a></li>
        <li><a href="#services" class="hover:text-brand-primary font-display block">Services</a></li>
        <li><a href="#evolutif" class="hover:text-brand-primary font-display block">The Evolutif way</a></li>
        <li><a href="#contact" class="hover:text-brand-primary font-display block">Contact</a></li>
    </ul>
</div>

    <!-- SCRIPT -->
    <script>
      const menuBtn = document.getElementById("menu-btn");
      const closeBtn = document.getElementById("close-btn");
      const mobileMenu = document.getElementById("mobile-menu");
      const menuLinks = mobileMenu ? mobileMenu.querySelectorAll("a") : [];

      const openMenu = () => {
    if (mobileMenu) {
      mobileMenu.classList.remove("translate-x-full");
      mobileMenu.classList.add("translate-x-0");
    }
  };

  const closeMenu = () => {
    if (mobileMenu) {
      mobileMenu.classList.remove("translate-x-0");
      mobileMenu.classList.add("translate-x-full");
    }
  };

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener("click", openMenu);
  }

  if (closeBtn && mobileMenu) {
    closeBtn.addEventListener("click", closeMenu);
  }

  // cerrar cuando se clickea un link
  menuLinks.forEach(link => {
    link.addEventListener("click", closeMenu);
  });
    </script>