---
import Container from "./Container.astro";
import Section from "./Section.astro";

const img = {
    logo: `${Astro.site}/images/evolutif.svg`,
    arg: `${Astro.site}/images/flag-argentina.svg`,
    br: `${Astro.site}/images/flag-brasil.svg`,
    inst: `${Astro.site}/images/icon-instagram.svg`,
    link: `${Astro.site}/images/icon-linkedin.svg`,
    what: `${Astro.site}/images/icon-whatsapp.svg`,
    enve: `${Astro.site}/images/icon-envelope.svg`,
    point: `${Astro.site}/images/icon-point.svg`,
};
---

<footer class="bg-brand-secondary">
    <Section>
        <Container>
            <div class="flex flex-col md:flex-row items-center">
                <div class="w-full pt-6 mb-10 md:mb-0">
                    <img src={img.logo} alt="" class="h-auto w-56 mx-auto">
                    <div class="flex items-center gap-2 mt-4 md:mx-auto justify-center w-full">
                        <p class="font-display text-sm">
                            All rights reserved 2025
                        </p>
                        <img src={img.arg} alt="" class="w-9 h-auto">
                        <img src={img.br} alt="" class="w-9 h-auto">
                    </div>
                </div>
                <div class=" text-center md:border-l-2 md:border-r-2 px-12 w-full max-w-2xs pt-8 mb-12 md:mb-0">
                    <h4 class="font-display font-semibold text-xl mb-4">
                        FOLLOW US
                    </h4>
                    <div class="flex items-center justify-center gap-3">
                        <a href="https://www.instagram.com/evolutif.ar/" target="_blank">
                            <img 
                                src={img.inst} 
                                alt="" 
                                class="w-8 h-auto transition-all hover:scale-125">
                        </a>
                        <a href="https://www.linkedin.com/company/108264056/admin/dashboard/" target="_blank">
                            <img 
                                src={img.link} 
                                alt="" 
                                class="w-8 h-auto transition-all hover:scale-125">
                        </a>
                    </div>
                    
                </div>
                <div class="w-full px-12">
                    <div class="flex flex-col md:flex-row items-center gap-10 ">
                        <h4 class="text-brand-primary text-2xl tracking-[4px] whitespace-nowrap">
                            Evolutif HQ
                        </h4>
                        <div class="font-display font-light w-full">
                            <a 
                                href="https://wa.me/5491166950476?text=Hola%2C%20quiero%20m%C3%A1s%20info" 
                                class="flex flex-col md:flex-row justify-center mb-6 md:mb-2  md:justify-start items-center gap-2 hover:text-brand-primary transition-all group">
                                <img src={img.what} alt="" class="w-8 h-autow-8 h-auto transition-all group-hover:scale-125">
                                <span>
                                    +54 11 66950476
                                </span>
                            </a>
                            <a href="mailto:contactus@evolutif.ar" class="flex flex-col md:flex-row justify-center  md:justify-start items-center gap-2 mb-6 md:mb-2 hover:text-brand-primary transition-all group">
                                <img src={img.enve} alt="" class="w-8 h-auto transition-all group-hover:scale-125">
                                <span>
                                     contactus@evolutif.ar
                                </span>
                            </a>
                            <div class="flex flex-col md:flex-row justify-center  md:justify-start items-center gap-2 min-w-60 ">
                                <img src={img.point} alt="" class="w-8 h-auto">
                                <span>
                                    RÃ­o de Janeiro. Brazil <br class="">
                                    Buenos Aires. Argentina
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Container>
    </Section>
</footer>